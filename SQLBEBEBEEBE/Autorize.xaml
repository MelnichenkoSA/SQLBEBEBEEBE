<Window x:Class="SQLBEBEBEEBE.Autorize"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SQLBEBEBEEBE"
        mc:Ignorable="d"
        Title="Авторизация" Height="200" Width="150" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock>Введите логин:</TextBlock>
        <TextBox Name="LoginBox" Grid.Row="1" MinWidth="150">Логин</TextBox>
        <TextBlock Grid.Row="2">Введите пароль:</TextBlock>
        <TextBox Name="passwordBox" Grid.Row="3" MinWidth="150">Пароль</TextBox>
        <WrapPanel Grid.Row="4" HorizontalAlignment="Right" Margin="0,15,0,0" Width="140">
            <Button IsDefault="True" Click="Accept_Click" MinWidth="60" Margin="0,0,10,0">OK</Button>
            <Button IsCancel="True" MinWidth="60">Отмена</Button>
        </WrapPanel>
    </Grid>
</Window>
